{
  "name": "cliq-bv/php-tech-assignment",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Olga Viktorova",
      "email": "Olga.viktrv@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-simplexml": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "11.4.1",
    "phpstan/phpstan": "1.12.6",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "scripts": {
    "test": "phpunit --testdox",
    "coverage": "XDEBUG_MODE=coverage  phpunit --configuration phpunit.xml --coverage-html ./coverage",
    "phpstan": "./vendor/bin/phpstan analyse src --level 9",
    "cs-fix": "./vendor/bin/php-cs-fixer fix src --dry-run --using-cache=no --verbose"
  }
}
